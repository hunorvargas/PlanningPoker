<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateSessionActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/poker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/createSessiontextv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/alex_brush"
            android:text="Create or Join a session"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#E7E3E3"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/creatSessionButton"
            style="@android:style/Widget.Material.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#C99E2D"
            android:text="Create Session"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#033F3F" />

        <Button
            android:id="@+id/joinSessionButton"
            style="@android:style/Widget.Material.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#C99E2D"
            android:text="Join Session"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#033F3F"
            android:textSize="22sp" />

        <Button
            android:id="@+id/historyButton"
            style="@android:style/Widget.Material.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#C99E2D"
            android:text="Show history"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#033F3F" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>