<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/door"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/joinSessionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/alex_brush"
            android:text="Join Session"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#EBE7E7"
            android:textSize="46sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/alex_brush"
            android:text="Name:"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#EBE7E7"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sessionNameeditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#E6C8C8"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/sessionIdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alex_brush"
            android:text="Session ID"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#EBE7E7"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/SessionIdeditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            tools:visibility="visible" />

        <Button
            android:id="@+id/joinButton"
            style="@android:style/Widget.Material.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#A1A8AF"
            android:fontFamily="@font/press_start_2p"
            android:text="Join"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#111111" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>